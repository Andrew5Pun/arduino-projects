void setup() {
  Serial.begin(9600);

  pinMode(led1, OUTPUT);
  pinMode(led2, OUTPUT);
  pinMode(led3, OUTPUT);
  pinMode(led4, OUTPUT);
  pinMode(led5, OUTPUT);
  pinMode(led6, OUTPUT);
  pinMode(led7, OUTPUT);
  pinMode(led8, OUTPUT);

  Serial.println("Enabling IRin");
  irrecv.enableIRIn(); // Start the receiver
  Serial.println("Enabled IRin");
  
}

void printChar(int chara[]) {

  int i;
  for (i = 0; i < 8; i++) { // loop through the 8 LEDs (1st line)
    digitalWrite(i + led1, chara[i]); // write to LED and correct pixel
  }
  delay(rowDelay);
  for (i = 0; i < 8; i++) { // loop through the 8 LEDs (2nd line)
    digitalWrite(i + led1, chara[i + 16]); // write to LED and correct pixel
  }
  delay(rowDelay);
  for (i = 0; i < 8; i++) { // loop through the 8 LEDs (3rd line)
    digitalWrite(i + led1, chara[i + 24]); // write to LED and correct pixel
  }
  delay(rowDelay);
  for (i = 0; i < 8; i++) { // loop through the 8 LEDs (4th line)
    digitalWrite(i + led1, chara[i + 32]); // write to LED and correct pixel
  }
  delay(rowDelay);
  for (i = 0; i < 8; i++) { // put space between letters (write everything as low)
    digitalWrite(i + led1, 0);
  }
  
}

